<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_send"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1B43E1F7"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Liên hệ với chúng tôi"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="350dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="top|center_vertical"
                        android:text="Để thêm một sản phẩm thì người đăng ký cần phải liên hệ với đại diện công ty để thêm các thông tin cần thiết của cơ sở và giai đoạn của sản phẩm"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="360dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:ems="10"
                        android:gravity="top|center_vertical"
                        android:hint="Nhập email của bạn, ví dụ la nvanh@gmail.com"
                        android:inputType="textEmailAddress"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <LinearLayout
                        android:layout_width="175dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="90dp"
                        android:layout_marginBottom="10dp"
                        android:background="#618BC34A"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Liên hệ"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/imageButton"
                            style="@android:style/Widget.Holo.Light.ImageButton"
                            android:layout_width="2dp"
                            android:layout_height="29dp"
                            android:layout_weight="1"
                            android:background="#618BC34A"
                            app:srcCompat="@android:drawable/ic_menu_send" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="427dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Liên hệ" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/list1"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/list2"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/list3"
                            android:layout_width="145dp"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textStyle="italic" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>